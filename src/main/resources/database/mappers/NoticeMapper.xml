<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gndg.home.notice.NoticeDAO">

<insert id="addNotice" parameterType="NoticeDTO">
<selectKey order="BEFORE" keyProperty="nt_num" resultType="Long">
SELECT NOTICE_SEQ.NEXTVAL FROM DUAL
</selectKey>
INSERT INTO NOTICE VALUES (#{nt_num},#{user_id},#{nt_title},#{nt_contents},SYSDATE,#{nt_yn},#{code})
</insert>

<insert id="addNoticeFile" parameterType="NoticeFileDTO">
INSERT INTO NOTICEFILE
VALUES(NOTICEFILE_SEQ.NEXTVAL, #{nt_num}, #{fileName}, #{oriName})
</insert>

<select id="getList" resultType="NoticeDTO">
	SELECT * FROM NOTICE WHERE NT_YN='Y' ORDER BY NT_NUM DESC
</select>
	
<select id="getDetail" parameterType="NoticeDTO" resultType="NoticeDTO">
SELECT * FROM NOTICE WHERE NT_NUM=#{nt_num}
</select>

</mapper>
