<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gndg.home.notice.NoticeDAO">

<select id="getList" resultType="NoticeDTO">
	SELECT * FROM NOTICE WHERE NT_YN='Y' ORDER BY NT_NUM DESC
</select>
	
<select id="getDetail" parameterType="NoticeDTO" resultType="NoticeDTO">
SELECT * FROM NOTICE WHERE NT_NUM=#{nt_num}
</select>

</mapper>
